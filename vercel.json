{
  "version": 2,
  "functions": {
    "api/index.ts": {
      "includeFiles": "{server/**,shared/**,uploads/**}"
    }
  },
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/api/index.ts"
    },
    {
      "source": "/robots.txt",
      "destination": "/api/index.ts"
    },
    {
      "source": "/uploads/(.*)",
      "destination": "/api/index.ts"
    },
    {
      "source": "/s/(.*)",
      "destination": "/api/index.ts"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
