# Copy this file to a local .env and fill values. Do NOT commit your real keys or secrets!

# Database
DATABASE_URL=postgresql://user:pass@host:5432/dbname

# Default admin password used on first boot (optional)
DEFAULT_ADMIN_PASSWORD=Pkmedia@123

# Session
SESSION_SECRET=changeme

# Grok / AI provider (optional)
# Configure GROK only if you have a Grok API key and endpoint. If not set, the app will use the simple rule-based PKBoot.
GROK_API_KEY=your_grok_api_key_here
GROK_API_URL=https://api.console.grok.ai/v1/completions
GROK_MODEL=grok-1

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
